@using Cassette.Views
@using MvcSiteMapProvider.Web.Html
@using NetchexAngular.Core.Common.Site
@using NetchexAngular.Extensions.Sitemap
@{
    ViewBag.Title = "Layout";
    Layout = "~/Views/Shared/Cassette.cshtml";
    Bundles.Reference("areas/dashboard/scripts/js");
    Bundles.Reference("areas/dashboard/scripts/js/controllers");
    Bundles.Reference("areas/dashboard/scripts/js/directives");
    Bundles.Reference("areas/dashboard/scripts/js/services");
    Bundles.Reference("areas/dashboard/scripts/js/filters");
    Bundles.Reference("areas/dashboard/content/less");
    Bundles.Reference("content/themes/base");
}

<style type="text/css">
    body {
        padding-top: 60px;
        padding-bottom: 40px;
    }
    .sidebar-nav {
        padding: 9px 0;
    }
</style>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="@Url.Content("/")">@Site.Instance.WebsiteName</a>
            <div class="nav-collapse collapse">
                @Html.MvcSiteMap("Public").Nav()
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" ng-app="dashboard">
    <div class="row-fluid">
        @RenderBody()
    </div>    
</div>
